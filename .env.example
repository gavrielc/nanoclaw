# NanoClaw Environment Configuration
# Copy to .env and fill in your values
# NEVER commit the .env file to version control

# --- Required: At least one LLM provider ---
# Anthropic API key (for Claude Agent SDK)
ANTHROPIC_API_KEY=
# Claude Code OAuth token (alternative auth)
CLAUDE_CODE_OAUTH_TOKEN=

# --- Assistant Configuration ---
ASSISTANT_NAME=Andy
# Container timeout in milliseconds (default: 300000 = 5 min)
CONTAINER_TIMEOUT=300000
# Max concurrent agent containers (default: 5)
MAX_CONCURRENT_CONTAINERS=5
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
# Timezone for scheduled tasks
TZ=UTC

# --- Container Runtime ---
# docker (default for Windows/Linux) or apple-container (macOS)
CONTAINER_RUNTIME=docker
# Agent container image name
CONTAINER_IMAGE=nanoclaw-agent:latest

# --- Channel: WhatsApp ---
WHATSAPP_ENABLED=true

# --- Channel: Telegram (optional) ---
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
# Comma-separated list of allowed Telegram user IDs (empty = allow all)
TELEGRAM_ALLOWED_USERS=

# --- Channel: Discord (optional) ---
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
# Comma-separated list of allowed Discord user IDs (empty = allow all)
DISCORD_ALLOWED_USERS=

# --- Web Search (optional, for agent web tools) ---
WEB_SEARCH_API_KEY=

# --- Gateway ---
GATEWAY_PORT=18790

# --- Docker Compose ---
# Host path for nanoclaw config (mount-allowlist.json, etc.)
NANOCLAW_CONFIG_DIR=./config
